from datetime import datetime

sp = datetime(1980, 11, 6)
now = datetime.now()
print (now)
print(now.strftime("%d.%m.%d %H:%M:%S"))

vahe = now - sp
print ("Vanus pÃ¤evadas:" vahe.days)
print ("Vanus aastates:" int(vahe.days/365))


if int(vahe.days/365)%5==0:
    print("Juubel")
else:
    print("Ei ole juubel")



